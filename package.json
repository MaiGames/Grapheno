{
  "name": "grapheno",
  "version": "1.0.0",
  "description": "Pixel Art Software",
  "main": "src/js-dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "run-os",
    "build:win32": "electron-builder --win",
    "build:darwin": "electron-builder --mac",
    "clean": "rimraf ./dist",
    "release": "electron-builder --win --publish never"
  },
  "repository": "https://github.com/MaiGames/Grapheno/",
  "keywords": [
    "Pixel Art",
    "Art",
    "Game Dev",
    "Vectors",
    "Pixels",
    "Drawing"
  ],
  "author": "MaiGames Studios",
  "license": "MIT",
  "build": {
    "appId": "com.github.maigames.grapheno",
    "productName": "Grapheno",
    "copyright": "MIT",
    "files": [
      "assets/**",
      "src/glsl/**",
      "src/html/**",
      "src/css/**",
      "src/js-dist/**"
    ],
    "mac": {
      "category": "public.build.automation",
      "icon": "assets/ico-256.ico"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "grapheno-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable"
        }
      ],
      "icon": "assets/ico-256.ico",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "runAfterFinish": true,
      "installerIcon": "assets/ico-256.ico",
      "artifactName": "grapheno-installer.${ext}"
    },
    "portable": {
      "artifactName": "grapheno-portable.${ext}"
    }
  },
  "dependencies": {
    "@pixi/unsafe-eval": "^5.3.0",
    "bulma": "^0.8.2",
    "electron-is-dev": "^1.0.1",
    "pixi.js": "^5.3.0",
    "tinycolor2": "^1.4.1",
    "v8-compile-cache": "^2.1.1",
    "webpack": "^4.43.0",
    "zebras": "0.0.18"
  },
  "devDependencies": {
    "@types/tinycolor2": "^1.4.2",
    "electron": "^9.0.2",
    "electron-builder": "^22.7.0",
    "rimraf": "^2.6.3",
    "run-script-os-fix": "^1.0.4"
  }
}
