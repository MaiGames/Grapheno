{
  "name": "grapheno",
  "version": "1.0.0",
  "description": "Pixelart Software",
  "main": "src/js/main_process/main.js",
  "scripts": {
    "start": "electron .",
    "build": "run-os",
    "build:win32": "electron-builder --win",
    "build:darwin": "electron-builder --mac",
    "clean": "rimraf ./dist",
    "release": "electron-builder --publish always"
  },
  "repository": "https://github.com/MaiGames/Grapheno/",
  "keywords": [
    "Pixelart",
    "Art",
    "Game Dev",
    "Vectors",
    "Pixels",
    "Drawing"
  ],
  "author": "MaiGames Studios",
  "license": "MIT",
  "devDependencies": {
    "electron": "^9.0.2"
  },
  "build": {
    "appId": "com.github.maigames.grapheno",
    "productName": "Grapheno",
    "copyright": "MIT",
    "files": [
      "**/*",
      "build/Release/*",
      "assets/*.*",
      "src/css/*.*",
      "src/html/*.*",
      "src/css/*.*"
    ],
    "mac": {
      "category": "public.build.automation",
      "icon": "assets/ico-256.ico"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "artifactName": "grapheno-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable"
        }
      ],
      "icon": "assets/ico-256.ico"
    },
    "nsis": {
      "runAfterFinish": true,
      "installerIcon": "assets/ico-256.ico",
      "artifactName": "grapheno-${version}.${ext}"
    },
    "portable": {
      "artifactName": "grapheno.exe"
    },
    "appx": {
      "applicationId": "grapheno",
      "backgroundColor": "#1E1E1E",
      "identityName": "grapheno",
      "publisherDisplayName": "MaiGames Studios",
      "artifactName": "grapheno-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "bulma": "^0.8.2",
    "v8-compile-cache": "^2.1.1",
    "webpack": "^4.43.0",
    "electron-is-dev": "^1.0.1"
  }
  "devDependencies": {
    "electron": "^5.0.1",
    "electron-builder": "^20.40.2",
    "rimraf": "^2.6.3",
    "run-script-os-fix": "^1.0.4"
  },
}
